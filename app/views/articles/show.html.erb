
<% present(@article) do |a| %>
  <div>
    <h1>
      <%= a.title %> <small>Published At: <%= a.publish_date  %></small>
    </h1>
    <div>
      <p>
        <%= a.description %>
      </p>
    </div>
  </div>
  <div>
    <h2>Comments</h2>
    <div>
      <%= render a.comments %>
    </div>
  </div>
  <div>
    <h2>Add a Comment</h2>
    <div>
      <%= render 'comments/form' %>
    </div>
  </div>
  <div>
    <p>
      <%= link_to 'Edit', edit_article_path(a) %>
    </p>
    <p>
      <%= link_to 'Delete', article_path(a), method: :delete, data: { confirm: 'Are you sure' } %>
    </p>
    <p>
      <%= link_to 'Back', articles_path %>
    </p>
  </div>
<% end %>
